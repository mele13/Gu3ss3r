{% extends "base_game.html.twig" %}

{% set title = "Game" %}

{% block body %}
    <div class="container">
        <header>
            <a href="{{ path('landing') }}">Home</a> <!-- path('/gu3ss3r/game') -->
            <h1>Let the game start!</h1>
        </header>

        <div class="description">
            Enter a number between 1 and 10.000.000.000
        </div>

        <form action="{{ path('guess') }}" method="get">
            <div class="form-group">
                <label for="">Number:</label>
                <input class="blank-input" type="number" name="number" id="" min="1" max="10000000000">
                <input class="button-input" type="submit" value="Try to guess my number">
                <a href=""><p class="button-reset">Reset number</p></a>
            </div>
        </form>
    </div>
{% endblock %}